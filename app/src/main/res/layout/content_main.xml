<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/thebackgroundofchoice"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:text="Beerno"
        android:textSize="60dp"

        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fl_clippingTransform="waves"
        app:fl_fillColor="@color/fill_color"
        app:fl_fillDuration="2000"
        app:fl_fillPercentage="100"
        app:fl_originalHeight="300"
        app:fl_originalWidth="250"
        app:fl_strokeColor="@color/stroke_color"
        app:fl_strokeDrawingDuration="2000"
        app:fl_strokeWidth="3dp"
        tools:ignore="MissingConstraints"
        android:foregroundGravity="center|bottom"
        android:layout_marginTop="120dp"
        />

</RelativeLayout>

</android.support.constraint.ConstraintLayout>